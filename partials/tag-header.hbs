
<header class="tag__header // txt-c / mar-v5">

    <h1 class="tag__title // heading / lg-txt+4 / sm-small / txt-thin / clr-simey">
        {{name}}
    </h1>

    <section class="tag__meta // mar-t3">

        <h2 class="tag__description // heading / lg-txt+3">
            {{#if description}}
                {{description}}
            {{/if}}
        </h2>

        <span class="tag__tags // txt-lower ">
            {{tags prefix="" separator=", " suffix=""}}
        </span>
    
    </section>

</header>
