
<header class="blog-post__header / txt-c">

    <h1 class="blog-post__title // heading / lg-txt+4 / sm-small / txt-thin / clr-simey">
        {{title}}
    </h1>

    <section class="blog-post__meta // txt-code / lh+2">

        <time 
            class="blog-post__date // disp-b" 
            datetime="{{ date format='YYYY-MM-DD' }}">

                {{ date format="Do MMMM YYYY" }}

        </time> 

        <span class="blog-post__tags // txt-lower ">
            {{tags prefix="[ " separator=", " suffix=" ]"}}
        </span>
    
    </section>

</header>