<footer class="blog-post__footer // clear sm-txt-c">

{{! Everything inside the #author tags pulls data from the author }}
{{#author}}

    {{#if bio}}
        
    {{else}}
        
    {{/if}}

    {{#if image}}
    
    {{/if}}

    <section class="authored-by / authored-by--blog-post // lg-float-l">

        <h5 class="authored-by__author // txt / txt-semi / lg-no-margin">
            Written by <a href="{{url}}">{{name}}</a> {{#if location}}in {{location}}{{/if}}
        </h5>

    </section>

{{/author}}



    <section class="share // lg-float-r / lg-txt-r">

        <a 
            class="share__twitter"
            href="https://twitter.com/intent/tweet?text={{encode title}}&amp;url={{url absolute="true"}}"
            onclick="window.open(this.href, 'twitter-share', 'width=550,height=235');return false;">
            
            {{> svgicon iconname="twitter"}} Tweet this shit!

        </a>

    </section>



</footer>