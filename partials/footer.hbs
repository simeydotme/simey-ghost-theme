
<footer class="footer">

    <div class="wrap">

    {{#is "post"}}
    {{#post}}

        <aside class="clear">

            {{#prev_post}}
            
                <a href="{{url}}" 
                    title="Previous Post" 
                    class="footer__prev // lg-float-l / lg-txt-l / sm-txt-c / sm-disp-b">

                    <span class="clr-simey">
                        {{> svgicon iconname="arrow-left"}} 
                        <h2 class="heading / disp-ib / txt-light / smaller">{{title}}</h2>
                    </span>

                </a>

            {{/prev_post}}

            <hr class="hr / hr--clean // lg-disp-n ">

            {{#next_post}}
            
                <a href="{{url}}" 
                    title="Next Post" 
                    class="footer__next // lg-float-r / lg-txt-r / sm-txt-c / sm-disp-b">

                    <span class="clr-simey">
                        <h2 class="heading / disp-ib / txt-light / smaller">{{title}}</h2>
                        {{> svgicon iconname="arrow-right"}}
                    </span>

                </a>

            {{/next_post}}

        </aside>

    {{/post}}
    {{/is}}

    {{#is "author"}}
        hmmm
    {{/is}}

    </div>

</footer>