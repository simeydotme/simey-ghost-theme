
<footer class="footer // padding-t3 / padding-b3">

    <aside class="wrap / clear / pos-r">

    {{#is "post"}}
    {{#post}}

            {{#prev_post}}
            
                <a href="{{url}}" 
                    title="Previous Post" 
                    class="footer__prev // lg-float-l / lg-fifty / lg-txt-l / sm-txt-c / sm-disp-b">

                    <span class="clr-simey">
                        {{> svgicon iconname="arrow-left"}} 
                        <h2 class="heading / disp-ib / txt-light / smaller">{{title}}</h2>
                    </span>

                </a>

            {{/prev_post}}

            <hr class="hr / hr--clean // lg-disp-n">

            {{#next_post}}
            
                <a href="{{url}}" 
                    title="Next Post" 
                    class="footer__next // lg-float-r / lg-fifty / lg-txt-r / sm-txt-c / sm-disp-b">

                    <span class="clr-simey">
                        <h2 class="heading / disp-ib / txt-light / smaller">{{title}}</h2>
                        {{> svgicon iconname="arrow-right"}}
                    </span>

                </a>

            {{/next_post}}


    {{/post}}
    {{/is}}

    </aside>

    {{#is "author"}}
        hmmm
    {{/is}}

</footer>