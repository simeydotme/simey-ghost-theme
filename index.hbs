{{!< default}}
{{! The tag above means - insert everything in this file into the {body} of the default.hbs template }}

{{! The big featured header }}


{{#if @blog.cover}} {{/if}}


{{#if @blog.logo}}
    {{@blog.url}}
    {{@blog.logo}}
    {{@blog.title}}
{{/if}}

<div class="hidden">
    <h2 class="page-title">{{@blog.title}}</h2>
    <h3 class="page-description">{{@blog.description}}</h3>
</div>

{{! The main content area on the homepage }}
<main id="content" class="content clear" role="main">

    <section class="divided-section lg-sixty lg-float-l">
        
        <h2 class="hidden">Posts</h2>

        {{! The tag below includes the post loop - partials/loop.hbs }}
        {{> "loop"}}

    </section>

    <section class="divided-section lg-forty lg-float-l">
        
        {{#if @blog.navigation}} 
        {{navigation}}
        {{/if}}

    </section>

</main>
